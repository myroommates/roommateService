# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Map static resources from the /public folder to the /assets URL path
GET           /assets/*file                              controllers.Assets.at(path="/public", file)

#
# REST routes
#

# account
POST          /rest/login                                @controllers.rest.LoginRestController.login()
POST          /rest/registration                         @controllers.rest.LoginRestController.registration()
POST          /rest/google                               @controllers.rest.LoginRestController.googleConnection()
PUT           /rest/google                               @controllers.rest.LoginRestController.registerGoogleAccount()
POST          /rest/load_data                            @controllers.rest.LoginRestController.loadData()
PUT           /rest/password                             @controllers.rest.LoginRestController.forgotPassword()


#home
PUT           /rest/home/:id                             @controllers.rest.HomeRestController.update(id:Long)

#ticket
GET           /rest/ticket                               @controllers.rest.TicketRestController.getAll()
GET           /rest/ticket/:id                           @controllers.rest.TicketRestController.getById(id:Long)
POST          /rest/ticket                               @controllers.rest.TicketRestController.create()
PUT           /rest/ticket/:id                           @controllers.rest.TicketRestController.update(id:Long)
DELETE        /rest/ticket/:id                           @controllers.rest.TicketRestController.remove(id:Long)
POST          /rest/ticket/comment/:id                   @controllers.rest.CommentRestController.addCommentForTicket(id:Long)
PUT           /rest/ticket/comment/read/:id              @controllers.rest.CommentRestController.hasReadCommentForTicket(id:Long)

#roommate
GET           /rest/roommate                             @controllers.rest.RoommateRestController.getAll()
GET           /rest/roommate/:id                         @controllers.rest.RoommateRestController.getById(id:Long)
POST          /rest/roommate                             @controllers.rest.RoommateRestController.create()
PUT           /rest/roommate/:id                         @controllers.rest.RoommateRestController.update(id:Long)
DELETE        /rest/roommate/:id                         @controllers.rest.RoommateRestController.delete(id:Long)
PUT           /rest/roommate/email/:id                   @controllers.rest.RoommateRestController.changeEmail(id:Long)
PUT           /rest/roommate/password/:id                @controllers.rest.RoommateRestController.changePassword(id:Long)

#event
GET           /rest/event                                @controllers.rest.EventRestController.getAll()
GET           /rest/event/:id                            @controllers.rest.EventRestController.getById(id:Long)
POST          /rest/event                                @controllers.rest.EventRestController.create()
PUT           /rest/event/:id                            @controllers.rest.EventRestController.update(id:Long)
DELETE        /rest/event/:id                            @controllers.rest.EventRestController.remove(id:Long)

#shopping item
GET           /rest/shoppingItem                         @controllers.rest.ShoppingRestController.getAll()
GET           /rest/shoppingItem/:id                     @controllers.rest.ShoppingRestController.getById(id:Long)
POST          /rest/shoppingItem                         @controllers.rest.ShoppingRestController.create()
PUT           /rest/shoppingItem/:id                     @controllers.rest.ShoppingRestController.update(id:Long)
PUT           /rest/shoppingItem/wasBought/:ids          @controllers.rest.ShoppingRestController.setWasBought(ids:String)
DELETE        /rest/shoppingItem/:id                     @controllers.rest.ShoppingRestController.remove(id:Long)
POST          /rest/shoppingItem/comment/:id             @controllers.rest.CommentRestController.addCommentForShoppingItem(id:Long)
PUT           /rest/shoppingItem/comment/read/:id        @controllers.rest.CommentRestController.hasReadCommentForShoppingItem(id:Long)

#superadmin
POST          /rest/superadmin/faq                       @controllers.SuperAdminController.createFaq()
POST          /rest/superadmin/survey                    @controllers.SuperAdminController.createSurvey()

# contact us
POST          /rest/contactus                            @controllers.rest.ContactUsRestController.contactUs()

#survey
POST          /rest/survey                               @controllers.rest.SurveyRestController.answer()

#comment
PUT           /rest/read/                                @controllers.rest.CommentRestController.hasReadCommentForHome()
POST          /rest/comment                              @controllers.rest.CommentRestController.addCommentForHome()
PUT           /rest/comment/:id                          @controllers.rest.CommentRestController.editComment(id:Long)
DELETE        /rest/comment/:id                          @controllers.rest.CommentRestController.remove(id:Long)

#
# LOCAL routes
#

#welcome
GET           /                                          @controllers.LoginController.loginPage()
GET           /loggin/:key                               @controllers.LoginController.loginWithAuthentication(key:String)
POST          /                                          @controllers.LoginController.login()
GET           /logout                                    @controllers.LoginController.logout()
GET           /changeLanguage/:lang                      @controllers.LoginController.changeLanguage(lang:String)

#home
GET           /home                                      @controllers.HomeController.index()

#admin
GET           /admin/roommate_list                       @controllers.AdminController.roommateList()
GET           /admin/preferences                         @controllers.AdminController.preferences()

#registration
GET           /registration                              @controllers.RegistrationController.registrationPage()
POST          /registration                              @controllers.RegistrationController.registration()

#count
GET           /count/resume                              @controllers.CountController.resume()
GET           /count/tickets                             @controllers.CountController.tickets()

#shopping
GET           /shopping/list                             @controllers.ShoppingController.list()

#profile
GET           /profile/myProfile                         @controllers.ProfileController.myProfile()

#about
GET           /about                                     @controllers.AboutController.index()

#superadmin
GET           /superadmin                                @controllers.SuperAdminController.index()

GET           /test                                       @controllers.TestController.index()




