# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Map static resources from the /public folder to the /assets URL path
GET           /assets/*file            controllers.Assets.at(path="/public", file)


# account
POST          /reactivation            @controllers.impl.LoginController.reactivation()
POST          /registration            @controllers.impl.LoginController.registration()
POST          /load_data               @controllers.impl.LoginController.loadData()

#home
GET           /home                    @controllers.impl.HomeController.getAll()

#ticket
GET           /ticket                  @controllers.impl.TicketController.getAll()
GET           /ticket/:id              @controllers.impl.TicketController.getById(id:Long)
POST          /ticket                  @controllers.impl.TicketController.create()
PUT           /ticket/:id              @controllers.impl.TicketController.update(id:Long)
DELETE        /ticket/:id              @controllers.impl.TicketController.remove(id:Long)

#roommate
GET           /roommate                @controllers.impl.RoommateController.getAll()
GET           /roommate/:id            @controllers.impl.RoommateController.getById(id:Long)
POST          /roommate                @controllers.impl.RoommateController.create()
PUT           /roommate/:id            @controllers.impl.RoommateController.update(id:Long)
DELETE        /roommate/:id            @controllers.impl.RoommateController.delete(id:Long)

#event
GET           /event                   @controllers.impl.EventController.getAll()
GET           /event/:id               @controllers.impl.EventController.getById(id:Long)
POST          /event                   @controllers.impl.EventController.create()
PUT           /event/:id               @controllers.impl.EventController.update(id:Long)
DELETE        /event/:id               @controllers.impl.EventController.remove(id:Long)

#shopping item
GET           /shoppingItem            @controllers.impl.ShoppingController.getAll()
GET           /shoppingItem/:id        @controllers.impl.ShoppingController.getById(id:Long)
POST          /shoppingItem            @controllers.impl.ShoppingController.create()
PUT           /shoppingItem/:id        @controllers.impl.ShoppingController.update(id:Long)
DELETE        /shoppingItem/:id        @controllers.impl.ShoppingController.remove(id:Long)
